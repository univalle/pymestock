            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/itemName2"
                style="@style/SubtitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="Alerta de stock bajo en tienda B"
                android:textColor="@color/color1"
                android:textStyle="bold" />

            <!-- Separate Layout for Quantities -->
            <LinearLayout
                android:id="@+id/itemQuantityLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/itemQuantity2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Los productos B y C se están agotando"
                    android:textColor="@color/color2"
                    android:textSize="14sp" />


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@drawable/border_card"
        android:paddingHorizontal="18dp"
        android:paddingVertical="24dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

