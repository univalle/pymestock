<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Pymestock" parent="Theme.AppCompat.Light.NoActionBar"> >
        <!-- Primary and secondary colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/accent</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/foreground</item>
        <item name="android:textColorSecondary">@color/secondary_foreground</item>

        <!-- Custom attributes for card-like elements -->
        <item name="android:colorForeground">@color/card_foreground</item>

        <!-- Error colors -->
        <item name="colorError">@color/destructive</item>

    </style>


    <style name="ButtonPrimary">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:background">@drawable/rounded_button_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/primary_foreground</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="ButtonPrimaryImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:background">@drawable/rounded_button_background</item>
        <item name="android:tint">@color/primary_foreground</item>
    </style>

    <style name="label">
        <item name="android:padding">8dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:background">@drawable/label_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/primary_foreground</item>
        <item name="android:textSize">12sp</item>

        <item name="android:textStyle">bold</item>
    </style>

    <!-- Secondary button-->
    <style name="ButtonSecondary">

        <item name="android:elevation">0dp</item>

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">@drawable/rounded_button_background_secondary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/primary_foreground</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Edit text -->
    <style name="CustomEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/foreground</item>
        <item name="android:textColorHint">@color/muted_foreground</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Title text -->
    <style name="TitleText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/color4</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Body text -->
    <style name="BodyText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/foreground</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <!-- Subtitle text -->
    <style name="SubtitleText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/color4</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <!-- Link text -->
    <style name="LinkText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/link</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <!-- Card -->
    <style name="Card">
        <item name="android:background">@drawable/button_outline</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:padding">16dp</item>
    </style>
</resources>